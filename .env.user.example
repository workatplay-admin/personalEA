# PersonalEA User Configuration
# Copy this file to .env.user and customize your settings

# =============================================================================
# SECURITY SETTINGS (IMPORTANT: Change these values!)
# =============================================================================

# JWT Secret - Used to sign authentication tokens
# Generate a strong random string (at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-random

# Session Secret - Used for web session security
# Generate a strong random string (at least 32 characters)
SESSION_SECRET=your-super-secret-session-key-change-this-to-something-random

# Email Encryption Key - Used to encrypt stored email credentials
# Must be exactly 32 characters long
EMAIL_ENCRYPTION_KEY=your-32-char-encryption-key-here

# Database Password
DB_PASSWORD=personalea

# Redis Password
REDIS_PASSWORD=personalea

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=production

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Web Interface Port
WEB_PORT=3000

# Configuration UI Port
CONFIG_PORT=3001

# =============================================================================
# EMAIL INTEGRATION SETTINGS
# =============================================================================

# Default Email Provider (gmail, outlook, imap)
DEFAULT_EMAIL_PROVIDER=gmail

# Email Sync Frequency (in minutes)
EMAIL_SYNC_FREQUENCY=15

# Maximum emails to process per sync
EMAIL_MAX_BATCH_SIZE=50

# Email retention period (in days, 0 = keep forever)
EMAIL_RETENTION_DAYS=365

# =============================================================================
# AI PROCESSING SETTINGS
# =============================================================================

# AI Provider (local, openai, anthropic)
AI_PROVIDER=local

# OpenAI API Key (only needed if using OpenAI)
# OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (only needed if using Anthropic)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AI Processing Features
AI_EMAIL_SUMMARY=true
AI_ACTION_ITEMS=true
AI_GOAL_SUGGESTIONS=true
AI_CALENDAR_OPTIMIZATION=true

# =============================================================================
# CALENDAR INTEGRATION SETTINGS
# =============================================================================

# Default Calendar Provider (google, outlook, apple, caldav)
DEFAULT_CALENDAR_PROVIDER=google

# Calendar Sync Frequency (in minutes)
CALENDAR_SYNC_FREQUENCY=30

# Working Hours (24-hour format)
WORK_START_HOUR=9
WORK_END_HOUR=17

# Default Meeting Duration (in minutes)
DEFAULT_MEETING_DURATION=30

# Meeting Buffer Time (in minutes)
MEETING_BUFFER_TIME=15

# =============================================================================
# GOAL MANAGEMENT SETTINGS
# =============================================================================

# Goal Review Frequency (daily, weekly, monthly)
GOAL_REVIEW_FREQUENCY=weekly

# Goal Categories (comma-separated)
GOAL_CATEGORIES=work,personal,health,learning,finance

# Priority System (simple, weighted, custom)
GOAL_PRIORITY_SYSTEM=simple

# Progress Tracking (percentage, milestone, custom)
GOAL_PROGRESS_TRACKING=percentage

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Enable Email Notifications
EMAIL_NOTIFICATIONS=true

# Enable Push Notifications
PUSH_NOTIFICATIONS=true

# Enable Desktop Notifications
DESKTOP_NOTIFICATIONS=true

# Notification Quiet Hours (24-hour format)
QUIET_HOURS_START=22
QUIET_HOURS_END=7

# =============================================================================
# PRIVACY & DATA SETTINGS
# =============================================================================

# Data Storage Location (local, cloud, hybrid)
DATA_STORAGE=local

# Enable Analytics (helps improve the product)
ANALYTICS_ENABLED=false

# Enable Crash Reporting
CRASH_REPORTING=false

# Data Export Format (json, csv, both)
DATA_EXPORT_FORMAT=json

# Automatic Backup Frequency (daily, weekly, monthly, never)
BACKUP_FREQUENCY=weekly

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Database Connection Pool Size
DB_POOL_SIZE=10

# Redis Connection Pool Size
REDIS_POOL_SIZE=5

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=100

# Session Timeout (in minutes)
SESSION_TIMEOUT=480

# File Upload Size Limit (in MB)
FILE_UPLOAD_LIMIT=10

# Enable Debug Mode (shows detailed logs)
DEBUG_MODE=false

# Enable Maintenance Mode (disables new registrations)
MAINTENANCE_MODE=false

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================

# Slack Integration
# SLACK_BOT_TOKEN=your-slack-bot-token
# SLACK_SIGNING_SECRET=your-slack-signing-secret

# Microsoft Teams Integration
# TEAMS_APP_ID=your-teams-app-id
# TEAMS_APP_PASSWORD=your-teams-app-password

# Zapier Integration
# ZAPIER_WEBHOOK_URL=your-zapier-webhook-url

# IFTTT Integration
# IFTTT_WEBHOOK_KEY=your-ifttt-webhook-key

# =============================================================================
# DEVELOPMENT SETTINGS (Only for developers)
# =============================================================================

# Enable Hot Reload (development only)
# HOT_RELOAD=true

# Enable Source Maps (development only)
# SOURCE_MAPS=true

# Enable Profiling (development only)
# PROFILING=false

# Mock External Services (development only)
# MOCK_SERVICES=false